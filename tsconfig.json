{
  "compilerOptions": {
    "lib": [
      "es6"
    ],
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "chai",
      "mocha",
      "node",
      "node-fetch",
      "pg",
      "sinon"
    ]
  },
  "include": [
    "src/**/*",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "tests/**/*"
  ]
}